@model HospitalManagement.Models.Doctor

@{
    ViewData["Title"] = "Delete Doctor";
}

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h4 mb-0"><i class="fas fa-user-md me-2"></i>Delete Doctor</h2>
                        <span class="badge bg-light text-danger fs-6 animate__animated animate__pulse animate__infinite">Warning</span>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-danger animate__animated animate__headShake" role="alert">
                        <h4 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion</h4>
                        <p class="mb-0">Are you sure you want to permanently delete this doctor record?</p>
                        <hr>
                        <p class="mb-0">This action cannot be undone.</p>
                    </div>

                    <div class="doctor-details p-4 mb-4 bg-light rounded-3 animate__animated animate__fadeIn">
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold text-md-end">@Html.DisplayNameFor(model => model.Name):</div>
                            <div class="col-md-8">
                                <span class="fs-5">@Html.DisplayFor(model => model.Name)</span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold text-md-end">@Html.DisplayNameFor(model => model.Specialization):</div>
                            <div class="col-md-8">
                                <span class="fs-5">@Html.DisplayFor(model => model.Specialization)</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 fw-bold text-md-end">@Html.DisplayNameFor(model => model.Email):</div>
                            <div class="col-md-8">
                                <span class="fs-5">@Html.DisplayFor(model => model.Email)</span>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="mt-4 animate__animated animate__fadeInUp">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger btn-lg px-4 py-2 rounded-pill">
                                <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 py-2 rounded-pill">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }
        
        .card {
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        .doctor-details {
            border-left: 4px solid #dc3545;
            transition: all 0.3s ease;
        }
        
        .doctor-details:hover {
            background-color: #f8d7da !important;
            transform: translateX(5px);
        }
        
        .btn-danger {
            background-color: #dc3545;
            border: none;
            transition: all 0.3s;
        }
        
        .btn-danger:hover {
            background-color: #bb2d3b;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
        }
        
        .btn-outline-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(108, 117, 125, 0.2);
        }
        
        .alert-danger {
            border-left: 4px solid #dc3545;
        }
        
        @@media (max-width: 768px) {
            .fw-bold.text-md-end {
                text-align: left !important;
                margin-bottom: 0.5rem;
            }
            
            .btn-lg {
                padding: 0.5rem 1rem !important;
                font-size: 1rem !important;
                width: 100%;
                margin-bottom: 1rem;
            }
            
            .d-flex {
                flex-direction: column;
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add animation to the warning badge
            setInterval(function() {
                $('.badge').toggleClass('animate__pulse');
            }, 2000);
            
            // Add hover effect to doctor details
            $('.doctor-details').hover(
                function() {
                    $(this).addClass('animate__pulse');
                },
                function() {
                    $(this).removeClass('animate__pulse');
                }
            );
        });
    </script>
}