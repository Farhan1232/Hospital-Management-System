@model HospitalManagement.Models.Doctor

@{
    ViewData["Title"] = "Doctor Details";
}

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h4 mb-0">
                            <i class="fas fa-user-md me-2"></i>Doctor Profile
                        </h2>
                        <span class="badge bg-light text-primary fs-6 animate__animated animate__pulse">
                            ID: @Model.Id
                        </span>
                    </div>
                </div>
                
                <div class="card-body p-4">
                    <div class="doctor-profile-header text-center mb-4 animate__animated animate__fadeInDown">
                        <div class="doctor-avatar mb-3">
                            <div class="avatar-circle bg-primary text-white">
                                <span class="initials">@Model.Name.Substring(0, 1)</span>
                            </div>
                        </div>
                        <h3 class="h2 text-primary">Dr. @Html.DisplayFor(model => model.Name)</h3>
                        <p class="text-muted mb-0">
                            <i class="fas fa-star-of-life text-danger me-1"></i>
                            @Html.DisplayFor(model => model.Specialization)
                        </p>
                    </div>
                    
                    <div class="doctor-details p-4 bg-light rounded-3 animate__animated animate__fadeIn">
                        <div class="row detail-row mb-3">
                            <div class="col-md-4 col-lg-3 fw-bold text-md-end detail-label">
                                <i class="fas fa-id-card me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.Name)
                            </div>
                            <div class="col-md-8 col-lg-9 detail-value">
                                @Html.DisplayFor(model => model.Name)
                            </div>
                        </div>
                        
                        <div class="row detail-row mb-3">
                            <div class="col-md-4 col-lg-3 fw-bold text-md-end detail-label">
                                <i class="fas fa-stethoscope me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.Specialization)
                            </div>
                            <div class="col-md-8 col-lg-9 detail-value">
                                @Html.DisplayFor(model => model.Specialization)
                            </div>
                        </div>
                        
                        <div class="row detail-row mb-3">
                            <div class="col-md-4 col-lg-3 fw-bold text-md-end detail-label">
                                <i class="fas fa-envelope me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.Email)
                            </div>
                            <div class="col-md-8 col-lg-9 detail-value">
                                <a href="mailto:@Model.Email" class="text-decoration-none">
                                    @Html.DisplayFor(model => model.Email)
                                </a>
                            </div>
                        </div>
                        
                        <div class="row detail-row mb-3">
                            <div class="col-md-4 col-lg-3 fw-bold text-md-end detail-label">
                                <i class="fas fa-phone-alt me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </div>
                            <div class="col-md-8 col-lg-9 detail-value">
                                <a href="tel:@Model.PhoneNumber" class="text-decoration-none">
                                    @Html.DisplayFor(model => model.PhoneNumber)
                                </a>
                            </div>
                        </div>
                        
                        <div class="row detail-row">
                            <div class="col-md-4 col-lg-3 fw-bold text-md-end detail-label">
                                <i class="fas fa-calendar-plus me-2 text-primary"></i>
                                @Html.DisplayNameFor(model => model.CreatedAt)
                            </div>
                            <div class="col-md-8 col-lg-9 detail-value">
                                @Html.DisplayFor(model => model.CreatedAt)
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4 animate__animated animate__fadeInUp">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg px-4 py-2 rounded-pill">
                            <i class="fas fa-edit me-2"></i>Edit Profile
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 py-2 rounded-pill">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }
        
        .card {
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }
        
        .avatar-circle {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            font-weight: bold;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        
        .doctor-details {
            border-left: 4px solid #0d6efd;
            transition: all 0.3s ease;
        }
        
        .detail-row {
            padding: 0.75rem 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            transition: all 0.2s ease;
        }
        
        .detail-row:hover {
            background-color: rgba(13, 110, 253, 0.05);
            transform: translateX(5px);
        }
        
        .detail-label {
            color: #495057;
        }
        
        .detail-value {
            color: #212529;
            font-size: 1.05rem;
        }
        
        .btn-warning {
            background-color: #ffc107;
            border: none;
            transition: all 0.3s;
        }
        
        .btn-warning:hover {
            background-color: #e0a800;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(255, 193, 7, 0.3);
        }
        
        .btn-outline-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(108, 117, 125, 0.2);
        }
        
        @@media (max-width: 768px) {
            .detail-label {
                text-align: left !important;
                margin-bottom: 0.25rem;
                padding-left: 1.5rem;
            }
            
            .detail-value {
                padding-left: 1.5rem;
                padding-bottom: 0.75rem;
            }
            
            .btn-lg {
                padding: 0.75rem 1.25rem !important;
                font-size: 1rem !important;
                width: 48%;
            }
            
            .avatar-circle {
                width: 80px;
                height: 80px;
                font-size: 2rem;
            }
        }
        
        @@media (max-width: 576px) {
            .d-flex {
                flex-direction: column;
                gap: 1rem;
            }
            
            .btn-lg {
                width: 100%;
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add animation to the ID badge
            setInterval(function() {
                $('.badge').toggleClass('animate__pulse');
            }, 3000);
            
            // Add hover effect to detail rows
            $('.detail-row').hover(
                function() {
                    $(this).addClass('animate__pulse');
                },
                function() {
                    $(this).removeClass('animate__pulse');
                }
            );
        });
    </script>
}