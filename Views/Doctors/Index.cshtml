@model IEnumerable<HospitalManagement.Models.Doctor>

@{
    ViewData["Title"] = "Doctors";
}

<div class="container-fluid py-4 animate__animated animate__fadeIn">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-5 text-primary">
                    <i class="fas fa-user-md me-2"></i>Our Doctors
                </h1>
                <a asp-action="Create" class="btn btn-success btn-lg rounded-pill shadow animate__animated animate__pulse">
                    <i class="fas fa-plus-circle me-2"></i>Add New Doctor
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light-primary">
                                <tr>
                                    <th class="ps-4 py-3 rounded-start">
                                        <i class="fas fa-user me-2"></i>Doctor Name
                                    </th>
                                    <th class="py-3">
                                        <i class="fas fa-stethoscope me-2"></i>Specialization
                                    </th>
                                    <th class="py-3">
                                        <i class="fas fa-phone-alt me-2"></i>Contact
                                    </th>
                                    <th class="pe-4 py-3 rounded-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="animate__animated animate__fadeIn">
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle-sm bg-primary text-white me-3">
                                                    <span class="initials">@item.Name.Substring(0, 1)</span>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@item.Name</h6>
                                                    <small class="text-muted">@item.Email</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary bg-opacity-10 text-primary py-2 px-3">
                                                @item.Specialization
                                            </span>
                                        </td>
                                        <td>
                                            <a href="tel:@item.PhoneNumber" class="text-decoration-none">
                                                <i class="fas fa-phone-alt me-2 text-muted"></i>@item.PhoneNumber
                                            </a>
                                        </td>
                                        <td class="pe-4">
                                            <div class="d-flex gap-2">
                                                <a asp-action="Edit" asp-route-id="@item.Id" 
                                                   class="btn btn-sm btn-primary rounded-pill px-3 py-1 action-btn">
                                                    <i class="fas fa-edit me-1"></i>Edit
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" 
                                                   class="btn btn-sm btn-danger rounded-pill px-3 py-1 action-btn">
                                                    <i class="fas fa-trash-alt me-1"></i>Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }

        .avatar-circle-sm {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1rem;
        }

        .bg-light-primary {
            background-color: rgba(13, 110, 253, 0.1) !important;
        }

        .table-hover tbody tr {
            transition: all 0.2s ease;
            cursor: pointer;
        }

        .table-hover tbody tr:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            background-color: white !important;
        }

        .action-btn {
            transition: all 0.2s ease;
        }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .btn-success {
            transition: all 0.3s ease;
        }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(25, 135, 84, 0.3);
        }

        .rounded-start {
            border-top-left-radius: 12px !important;
            border-bottom-left-radius: 12px !important;
        }

        .rounded-end {
            border-top-right-radius: 12px !important;
            border-bottom-right-radius: 12px !important;
        }

        .card {
            border-radius: 12px;
            overflow: hidden;
            border: none;
        }

        @@media (max-width: 768px) {
            .d-flex.justify-content-between {
                flex-direction: column;
                gap: 1rem;
            }

            .btn-lg {
                width: 100%;
            }

            .table-responsive {
                border: none;
            }

            .table thead {
                display: none;
            }

            .table, .table tbody, .table tr, .table td {
                display: block;
                width: 100%;
            }

            .table tr {
                margin-bottom: 1.5rem;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
                border-radius: 12px;
                overflow: hidden;
            }

            .table td {
                padding: 0.75rem;
                text-align: right;
                position: relative;
                padding-left: 50%;
            }

            .table td::before {
                content: attr(data-label);
                position: absolute;
                left: 1rem;
                width: 45%;
                padding-right: 1rem;
                font-weight: 600;
                text-align: left;
            }

            .table td:first-child {
                background-color: rgba(13, 110, 253, 0.1);
                text-align: left;
                padding-left: 1rem;
            }

            .table td:first-child::before {
                display: none;
            }

            .table td:last-child {
                text-align: center;
                padding-left: 1rem;
            }

            .table td:last-child::before {
                display: none;
            }

            .action-btn {
                width: 100%;
                margin-bottom: 0.5rem;
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Make table rows clickable (optional)
            $('tbody tr').click(function(e) {
                if (!$(e.target).is('a, i')) {
                    window.location = $(this).find('a[asp-action="Edit"]').attr('href');
                }
            });

            // Add mobile table labels
            if ($(window).width() < 768) {
                $('thead th').each(function() {
                    var label = $(this).text().trim();
                    $('tbody td').eq($(this).index()).attr('data-label', label);
                });
            }

            // Add animation to "Add New" button
            setInterval(function() {
                $('.btn-success').toggleClass('animate__pulse');
            }, 3000);
        });
    </script>
}